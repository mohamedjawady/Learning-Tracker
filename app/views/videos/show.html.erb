<div class="max-w-4xl mx-auto py-8 px-4">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">üé¨ <%= @video.title %></h1>
      <div class="flex items-center gap-4 text-sm text-gray-600">
        <span>Video <%= @video.order_number %></span>
        <% if @video.duration_minutes.present? %>
          <span><%= pluralize(@video.duration_minutes, 'minute') %> duration</span>
        <% end %>
        <% if @video.completed? %>
          <span class="text-green-600 font-medium flex items-center gap-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Completed <%= time_ago_in_words(@video.completed_at) %> ago
          </span>
        <% else %>
          <span class="text-orange-600 font-medium">In Progress</span>
        <% end %>
      </div>
    </div>

    <!-- Video progress section -->
    <% if @video.duration_minutes.present? %>
      <div class="mb-8 p-6 bg-gray-50 rounded-lg">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Viewing Progress</h3>
        <div class="space-y-4">
          <div>
            <div class="flex justify-between text-sm text-gray-600 mb-1">
              <span>Progress</span>
              <span><%= @video.watched_minutes || 0 %> / <%= @video.duration_minutes %> minutes</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <% progress_percent = @video.watched_minutes.present? ? ((@video.watched_minutes.to_f / @video.duration_minutes) * 100).round(1) : 0 %>
              <div class="bg-red-600 h-3 rounded-full transition-all duration-300" style="width: <%= progress_percent %>%"></div>
            </div>
            <div class="text-center text-sm text-gray-600 mt-1"><%= progress_percent %>% watched</div>
          </div>
          
          <% unless @video.completed? %>
            <div class="text-center">
              <%= form_with model: @video, url: video_path(@video), method: :patch, local: true, class: "inline-flex items-center gap-2" do |form| %>
                <%= form.number_field :watched_minutes, 
                    value: @video.watched_minutes || 0,
                    min: 0, 
                    max: @video.duration_minutes,
                    class: "w-20 px-2 py-1 border border-gray-300 rounded text-sm",
                    placeholder: "0" %>
                <span class="text-sm text-gray-600">minutes watched</span>
                <%= form.submit "Update Progress", 
                    class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm font-medium transition-colors" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @video.description.present? %>
      <div class="mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Description</h2>
        <div class="prose max-w-none text-gray-700">
          <%= simple_format(@video.description) %>
        </div>
      </div>
    <% end %>

    <div class="flex items-center justify-between pt-8 border-t border-gray-200">
      <div class="flex items-center gap-4">
        <%= link_to "‚Üê Back to #{@video.course.title}", course_path(@video.course), 
            class: "text-red-600 hover:text-red-700 font-medium" %>
      </div>

      <div class="flex items-center gap-3">
        <% unless @video.completed? %>
          <%= link_to complete_video_path(@video), method: :patch,
              class: "bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg font-medium transition-colors",
              data: { confirm: "Mark this video as complete?" } do %>
            ‚úì Mark Complete
          <% end %>
        <% end %>
        
        <%= link_to edit_video_path(@video), 
            class: "bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-lg font-medium transition-colors" do %>
          ‚úèÔ∏è Edit Video
        <% end %>
      </div>
    </div>
  </div>

  <!-- Related Course -->
  <div class="mt-8 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Part of Course</h3>
    <div class="flex items-center gap-4">
      <div class="w-16 h-16 bg-red-100 rounded-lg flex items-center justify-center">
        <span class="text-2xl">üéì</span>
      </div>
      <div>
        <h4 class="font-medium text-gray-900"><%= @video.course.title %></h4>
        <p class="text-gray-600 text-sm"><%= @video.course.instructor %></p>
        <%= link_to "View Course", course_path(@video.course), 
            class: "text-red-600 hover:text-red-700 text-sm font-medium" %>
      </div>
    </div>
  </div>
</div>
