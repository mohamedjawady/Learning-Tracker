<div class="max-w-6xl mx-auto py-8 px-4">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">🎬 Videos</h1>
      <p class="text-gray-600"><%= @course.title %></p>
    </div>
    <%= link_to "Add New Video", new_course_video_path(@course), 
        class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-medium inline-flex items-center gap-2 transition-colors" %>
  </div>

  <% if @videos.any? %>
    <div class="grid gap-4">
      <% @videos.each do |video| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4 flex-1">
              <div class="flex-shrink-0">
                <% if video.completed? %>
                  <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                <% else %>
                  <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h8m-9-4V8a2 2 0 012-2h6a2 2 0 012 2v2M7 16l4-4 4 4m-4-8v8"></path>
                    </svg>
                  </div>
                <% end %>
              </div>

              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-1">
                  <%= link_to video.title, video_path(video), class: "hover:text-red-600 transition-colors" %>
                </h3>
                <% if video.description.present? %>
                  <p class="text-gray-600 text-sm mb-2"><%= truncate(video.description, length: 150) %></p>
                <% end %>
                
                <div class="flex items-center gap-4 text-sm text-gray-500">
                  <span>Video <%= video.order_number %></span>
                  <% if video.duration_minutes.present? %>
                    <span><%= pluralize(video.duration_minutes, 'minute') %></span>
                  <% end %>
                  <% if video.watched_minutes.present? && video.duration_minutes.present? %>
                    <span class="text-blue-600">
                      <%= ((video.watched_minutes.to_f / video.duration_minutes) * 100).round(1) %>% watched
                    </span>
                  <% end %>
                  <% if video.completed? %>
                    <span class="text-green-600 font-medium">Completed <%= time_ago_in_words(video.completed_at) %> ago</span>
                  <% end %>
                </div>

                <!-- Progress bar for partially watched videos -->
                <% if video.watched_minutes.present? && video.duration_minutes.present? && !video.completed? %>
                  <div class="mt-2">
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div class="bg-blue-600 h-2 rounded-full" style="width: <%= ((video.watched_minutes.to_f / video.duration_minutes) * 100).round(1) %>%"></div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <% unless video.completed? %>
                <%= link_to complete_video_path(video), method: :patch,
                    class: "bg-green-100 hover:bg-green-200 text-green-700 px-3 py-1 rounded-md text-sm font-medium transition-colors",
                    data: { confirm: "Mark this video as complete?" } do %>
                  ✓ Complete
                <% end %>
              <% end %>
              
              <%= link_to edit_video_path(video), 
                  class: "text-gray-600 hover:text-red-600 p-2 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              
              <%= link_to video_path(video), method: :delete,
                  class: "text-gray-600 hover:text-red-600 p-2 transition-colors",
                  data: { confirm: "Are you sure you want to delete this video?" } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Summary stats -->
    <div class="mt-8 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Video Progress Summary</h3>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= @videos.count %></div>
          <div class="text-sm text-gray-600">Total Videos</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-green-600"><%= @videos.where(completed: true).count %></div>
          <div class="text-sm text-gray-600">Completed</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-blue-600"><%= @videos.sum(:duration_minutes) %></div>
          <div class="text-sm text-gray-600">Total Minutes</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-blue-600"><%= @videos.sum(:watched_minutes) %></div>
          <div class="text-sm text-gray-600">Watched Minutes</div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">🎬</div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No videos yet</h3>
      <p class="text-gray-600 mb-6">Start adding course videos to track your watching progress.</p>
      <%= link_to "Add First Video", new_course_video_path(@course), 
          class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg font-medium inline-flex items-center gap-2 transition-colors" %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= link_to "← Back to #{@course.title}", course_path(@course), 
        class: "text-red-600 hover:text-red-700 font-medium" %>
  </div>
</div>
