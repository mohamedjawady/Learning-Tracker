<div class="px-4 py-6 sm:px-0">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Add New Course
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Add a new course to your learning tracker.
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <%= link_to courses_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        Back to Courses
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: @course, local: true, class: "space-y-6" do |form| %>
        <% if @course.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative">
            <h4 class="font-medium">Please fix the following errors:</h4>
            <ul class="mt-1 list-disc list-inside">
              <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Course title" %>
          </div>

          <div>
            <%= form.label :instructor, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :instructor, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Instructor name" %>
          </div>

          <div>
            <%= form.label :platform, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :platform, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "e.g., Udemy, Coursera, Pluralsight" %>
          </div>

          <div>
            <%= form.label :difficulty_level, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :difficulty_level, options_for_select([
              ['Beginner', 'beginner'],
              ['Intermediate', 'intermediate'],
              ['Advanced', 'advanced']
            ], @course.difficulty_level), { prompt: "Select difficulty" }, { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div>
            <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :status, options_for_select([
              ['Not Started', 'not_started'],
              ['In Progress', 'in_progress'],
              ['Completed', 'completed'],
              ['Paused', 'paused']
            ], @course.status), {}, { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div>
            <%= form.label :total_duration_hours, class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :total_duration_hours, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Total hours" %>
          </div>

          <div>
            <%= form.label :start_date, class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :start_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :target_completion_date, class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :target_completion_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= form.label :url, class: "block text-sm font-medium text-gray-700" %>
          <%= form.url_field :url, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "https://..." %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Course description..." %>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to courses_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Course", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
