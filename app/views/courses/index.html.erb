<div class="px-4 py-6 sm:px-0">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Courses
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Manage your online courses and track your progress.
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <%= link_to new_course_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" do %>
        <i class="fas fa-plus mr-2"></i>
        Add Course
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with url: courses_path, method: :get, local: true, class: "flex flex-wrap items-center gap-4" do |form| %>
        <div class="flex-1 min-w-0">
          <%= form.text_field :search, placeholder: "Search courses...", value: params[:search], class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= form.select :status, options_for_select([
            ['All Status', ''],
            ['Not Started', 'not_started'],
            ['In Progress', 'in_progress'],
            ['Completed', 'completed'],
            ['Paused', 'paused']
          ], params[:status]), {}, { class: "block border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
        </div>
        <div>
          <%= form.submit "Filter", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
        <% if params[:search].present? || params[:status].present? %>
          <%= link_to "Clear", courses_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Courses Grid -->
  <% if @courses.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @courses.each do |course| %>
        <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
          <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-lg font-medium text-gray-900 truncate">
                <%= link_to course.title, course_path(course), class: "hover:text-indigo-600" %>
              </h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= course.status == 'completed' ? 'bg-green-100 text-green-800' : course.status == 'in_progress' ? 'bg-blue-100 text-blue-800' : course.status == 'paused' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800' %>">
                <%= course.status.humanize %>
              </span>
            </div>
            
            <% if course.instructor.present? %>
              <p class="text-sm text-gray-600 mb-2">by <%= course.instructor %></p>
            <% end %>
            
            <% if course.description.present? %>
              <p class="text-sm text-gray-500 mb-4 line-clamp-2"><%= truncate(course.description, length: 100) %></p>
            <% end %>

            <!-- Progress Bar -->
            <div class="mb-4">
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">Progress</span>
                <span class="font-medium text-gray-900"><%= course.progress_percentage %>%</span>
              </div>
              <div class="mt-2 bg-gray-200 rounded-full h-2">
                <div class="bg-indigo-600 h-2 rounded-full progress-bar transition-all duration-500 ease-out" style="width: <%= course.progress_percentage %>%"></div>
              </div>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-3 gap-2 text-center text-xs text-gray-500 mb-4">
              <div>
                <div class="font-medium text-gray-900"><%= course.chapters.count %></div>
                <div>Chapters</div>
              </div>
              <div>
                <div class="font-medium text-gray-900"><%= course.videos.count %></div>
                <div>Videos</div>
              </div>
              <div>
                <div class="font-medium text-gray-900"><%= course.labs.count %></div>
                <div>Labs</div>
              </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-between items-center">
              <div class="flex space-x-2">
                <%= link_to course_path(course), class: "text-indigo-600 hover:text-indigo-900 text-sm" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <%= link_to edit_course_path(course), class: "text-gray-600 hover:text-gray-900 text-sm" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= link_to course_path(course), method: :delete, confirm: "Are you sure?", class: "text-red-600 hover:text-red-900 text-sm" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              </div>
              <% if course.url.present? %>
                <%= link_to course.url, target: "_blank", class: "text-sm text-indigo-600 hover:text-indigo-500" do %>
                  Visit Course <i class="fas fa-external-link-alt ml-1"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <i class="fas fa-graduation-cap text-6xl text-gray-300 mb-4"></i>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No courses found</h3>
      <p class="text-gray-500 mb-6">
        <% if params[:search].present? || params[:status].present? %>
          Try adjusting your search criteria or filters.
        <% else %>
          Get started by adding your first course.
        <% end %>
      </p>
      <% unless params[:search].present? || params[:status].present? %>
        <%= link_to new_course_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
          <i class="fas fa-plus mr-2"></i>
          Add Your First Course
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
