<div class="px-4 py-6 sm:px-0">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Edit Article</h1>
    <div class="flex space-x-3">
      <%= link_to "← Back to Article", @article, class: "text-indigo-600 hover:text-indigo-500" %>
      <%= link_to "All Articles", articles_path, class: "text-gray-600 hover:text-gray-500" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with model: @article, local: true, class: "space-y-6" do |form| %>
      <% if @article.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-exclamation-circle text-red-400"></i>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @article.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Enter article title" %>
        </div>

        <div>
          <%= form.label :author, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :author, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Author name" %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :url, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.url_field :url, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "https://example.com/article" %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 4, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Brief description of the article..." %>
        </div>

        <div>
          <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :status, options_for_select([
            ['Not Started', 'not_started'],
            ['In Progress', 'in_progress'],
            ['Completed', 'completed'],
            ['Paused', 'paused']
          ], @article.status), {}, { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
        </div>

        <div>
          <%= form.label :estimated_read_time, "Estimated Read Time (minutes)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :estimated_read_time, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "30" %>
        </div>

        <div>
          <%= form.label :time_spent, "Time Spent (minutes)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :time_spent, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "0" %>
        </div>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", @article, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md text-sm font-medium" %>
        <%= form.submit "Update Article", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    <% end %>
  </div>

  <!-- Additional Actions Section -->
  <div class="mt-6 bg-gray-50 rounded-lg p-4">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="text-lg font-medium text-gray-900">Article Actions</h3>
        <p class="text-sm text-gray-600">Additional actions for this article.</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "View Article", @article, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        <%= link_to "Delete Article", @article, method: :delete, 
                    data: { 
                      confirm: "Are you sure you want to delete '#{@article.title}'? This action cannot be undone." 
                    }, 
                    class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    </div>
  </div>
</div>
