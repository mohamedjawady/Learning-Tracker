<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Article Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
    <div class="px-6 py-8">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @article.title %></h1>
          
          <% if @article.author.present? %>
            <p class="text-gray-600 text-lg mb-4">by <%= @article.author %></p>
          <% end %>
          
          <% if @article.description.present? %>
            <p class="text-gray-600 mb-6"><%= @article.description %></p>
          <% end %>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div>
              <span class="text-sm font-medium text-gray-500">Status</span>
              <div class="mt-1">
                <% case @article.status %>
                <% when 'completed' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <i class="fas fa-check-circle mr-1"></i>
                    Completed
                  </span>
                <% when 'in_progress' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <i class="fas fa-clock mr-1"></i>
                    In Progress
                  </span>
                <% when 'not_started' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <i class="fas fa-pause-circle mr-1"></i>
                    Not Started
                  </span>
                <% end %>
              </div>
            </div>
            
            <div>
              <span class="text-sm font-medium text-gray-500">Estimated Read Time</span>
              <div class="mt-1">
                <% if @article.estimated_read_time.present? %>
                  <span class="text-gray-900"><%= @article.estimated_read_time %> minutes</span>
                <% else %>
                  <span class="text-gray-500">Not specified</span>
                <% end %>
              </div>
            </div>
            
            <div>
              <span class="text-sm font-medium text-gray-500">Time Spent</span>
              <div class="mt-1">
                <span class="text-gray-900"><%= @article.time_spent || 0 %> minutes</span>
                <% if @article.estimated_read_time.present? && @article.time_spent.present? && @article.estimated_read_time > 0 %>
                  <div class="mt-1">
                    <div class="w-full bg-gray-200 rounded-full h-1">
                      <div class="bg-blue-600 h-1 rounded-full" style="width: <%= [@article.time_spent.to_f / @article.estimated_read_time * 100, 100].min %>%"></div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          
          <% if @article.url.present? %>
            <div class="mb-6">
              <a href="<%= @article.url %>" target="_blank" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                <i class="fas fa-external-link-alt mr-2"></i>
                Read Article
              </a>
            </div>
          <% end %>
        </div>
        
        <% if @article.status == 'completed' %>
          <div class="ml-6 flex-shrink-0">
            <div class="text-center">
              <i class="fas fa-check-circle text-4xl text-green-500 mb-2"></i>
              <div class="text-sm text-gray-500">Completed!</div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Quick Actions -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
    <div class="px-6 py-4">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h2>
      <div class="flex flex-wrap gap-3">
        <% if @article.status != 'completed' %>
          <%= button_to "Mark as Complete", update_progress_article_path(@article), method: :patch,
              params: { article: { status: 'completed' } },
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
        <% else %>
          <%= button_to "Mark as In Progress", update_progress_article_path(@article), method: :patch,
              params: { article: { status: 'in_progress' } },
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        <% end %>
        
        <% if @article.status == 'not_started' %>
          <%= button_to "Start Reading", update_progress_article_path(@article), method: :patch,
              params: { article: { status: 'in_progress' } },
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        <% end %>
        
        <%= link_to "Edit Article", edit_article_path(@article),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        
        <%= link_to "Delete Article", article_path(@article), method: :delete,
            confirm: "Are you sure you want to delete this article?",
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
      </div>
    </div>
  </div>
  
  <!-- Article Details -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
    <div class="px-6 py-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Details</h2>
      
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Added</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @article.created_at.strftime('%B %d, %Y at %I:%M %p') %>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @article.updated_at.strftime('%B %d, %Y at %I:%M %p') %>
          </dd>
        </div>
        
        <% if @article.url.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Source URL</dt>
            <dd class="mt-1 text-sm text-blue-600">
              <a href="<%= @article.url %>" target="_blank" class="hover:text-blue-500 break-all">
                <%= @article.url %>
                <i class="fas fa-external-link-alt ml-1 text-xs"></i>
              </a>
            </dd>
          </div>
        <% end %>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Reading Progress</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @article.estimated_read_time.present? && @article.time_spent.present? %>
              <%= @article.time_spent %> of <%= @article.estimated_read_time %> minutes
              (<%= (@article.time_spent.to_f / @article.estimated_read_time * 100).round %>%)
            <% elsif @article.time_spent.present? %>
              <%= @article.time_spent %> minutes spent
            <% else %>
              Not started
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
  
  <!-- Time Tracking -->
  <% if @article.status == 'in_progress' %>
    <div class="bg-blue-50 rounded-lg border border-blue-200 mb-8">
      <div class="px-6 py-4">
        <h2 class="text-lg font-medium text-blue-900 mb-4">
          <i class="fas fa-clock mr-2"></i>
          Time Tracking
        </h2>
        <p class="text-blue-800 mb-4">Update the time you've spent reading this article:</p>
        
        <%= form_with model: @article, url: update_progress_article_path(@article), method: :patch, local: true, class: "flex items-end space-x-4" do |form| %>
          <div>
            <%= form.label :time_spent, "Minutes spent:", class: "block text-sm font-medium text-blue-900" %>
            <%= form.number_field :time_spent, value: @article.time_spent || 0, min: 0, 
                class: "mt-1 block w-24 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
          <%= form.submit "Update Time", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- Navigation -->
  <div class="flex justify-between">
    <%= link_to "← Back to Articles", articles_path,
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    
    <%= link_to "Back to Dashboard", root_path,
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
</div>
