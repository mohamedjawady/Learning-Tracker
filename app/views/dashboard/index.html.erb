<div class="px-4 py-6 sm:px-0">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Welcome back! ðŸ‘‹
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Here's what's happening with your learning journey today.
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <%= link_to new_course_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <i class="fas fa-plus mr-2"></i>
          Add Course
        <% end %>
        <%= link_to new_book_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <i class="fas fa-book mr-2"></i>
          Add Book
        <% end %>
        <%= link_to new_article_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <i class="fas fa-newspaper mr-2"></i>
          Add Article
        <% end %>
      </div>
    </div>
  </div>

  <!-- Stats Overview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-graduation-cap text-2xl text-indigo-600"></i>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Courses</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @courses.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-book text-2xl text-green-600"></i>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Books</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @books.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-newspaper text-2xl text-yellow-600"></i>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">Total Articles</dt>
              <dd class="text-lg font-medium text-gray-900"><%= @articles.count %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-check-circle text-2xl text-purple-600"></i>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">This Week</dt>
              <dd class="text-lg font-medium text-gray-900">
                <%= @weekly_progress[:chapters_completed] + @weekly_progress[:videos_completed] + @weekly_progress[:labs_completed] %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Column - Learning Resources -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Recent Courses -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Courses</h3>
            <%= link_to "View All", courses_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
          </div>
          <% if @courses.any? %>
            <div class="space-y-4">
              <% @courses.each do |course| %>
                <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                  <div class="flex items-center justify-between">
                    <div class="flex-1">
                      <h4 class="text-sm font-medium text-gray-900">
                        <%= link_to course.title, course_path(course), class: "hover:text-indigo-600" %>
                      </h4>
                      <% if course.instructor.present? %>
                        <p class="text-sm text-gray-500">by <%= course.instructor %></p>
                      <% end %>
                      <div class="mt-2">
                        <div class="flex items-center">
                          <div class="flex-1 bg-gray-200 rounded-full h-2 mr-3">
                            <div class="bg-indigo-600 h-2 rounded-full progress-bar transition-all duration-500 ease-out" style="width: <%= course.progress_percentage %>%"></div>
                          </div>
                          <span class="text-sm text-gray-500"><%= course.progress_percentage %>%</span>
                        </div>
                      </div>
                    </div>
                    <div class="ml-4">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= course.status == 'completed' ? 'bg-green-100 text-green-800' : course.status == 'in_progress' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= course.status.humanize %>
                      </span>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <i class="fas fa-graduation-cap text-4xl text-gray-300 mb-4"></i>
              <p class="text-gray-500">No courses yet. Start your learning journey!</p>
              <%= link_to "Add your first course", new_course_path, class: "mt-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Books -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Books</h3>
            <%= link_to "View All", books_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
          </div>
          <% if @books.any? %>
            <div class="space-y-4">
              <% @books.each do |book| %>
                <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
                  <div class="flex items-center justify-between">
                    <div class="flex-1">
                      <h4 class="text-sm font-medium text-gray-900">
                        <%= link_to book.title, book_path(book), class: "hover:text-indigo-600" %>
                      </h4>
                      <% if book.author.present? %>
                        <p class="text-sm text-gray-500">by <%= book.author %></p>
                      <% end %>
                      <div class="mt-2">
                        <div class="flex items-center">
                          <div class="flex-1 bg-gray-200 rounded-full h-2 mr-3">
                            <div class="bg-green-600 h-2 rounded-full progress-bar transition-all duration-500 ease-out" style="width: <%= book.progress_percentage %>%"></div>
                          </div>
                          <span class="text-sm text-gray-500"><%= book.progress_percentage %>%</span>
                        </div>
                        <% if book.total_pages.present? && book.current_page.present? %>
                          <p class="text-xs text-gray-400 mt-1">Page <%= book.current_page %> of <%= book.total_pages %></p>
                        <% end %>
                      </div>
                    </div>
                    <div class="ml-4 flex flex-col items-end">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= book.status == 'completed' ? 'bg-green-100 text-green-800' : book.status == 'in_progress' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= book.status.humanize %>
                      </span>
                      <% if book.has_pdf? %>
                        <span class="mt-1 text-xs text-indigo-600">
                          <i class="fas fa-file-pdf"></i> PDF
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6">
              <i class="fas fa-book text-4xl text-gray-300 mb-4"></i>
              <p class="text-gray-500">No books yet. Add your reading list!</p>
              <%= link_to "Add your first book", new_book_path, class: "mt-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right Column - Today's Schedule & Todos -->
    <div class="space-y-6">
      <!-- Today's Events -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Today's Schedule</h3>
            <%= link_to "View Calendar", calendar_events_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
          </div>
          <% if @today_events.any? %>
            <div class="space-y-3">
              <% @today_events.each do |event| %>
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0 w-2 h-2 <%= event.color_class %> rounded-full mt-2"></div>
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900"><%= event.title %></p>
                    <p class="text-xs text-gray-500">
                      <%= event.start_date.strftime("%I:%M %p") %>
                      <% if event.eventable.present? %>
                        - <%= event.eventable.title %>
                      <% end %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-calendar text-2xl text-gray-300 mb-2"></i>
              <p class="text-sm text-gray-500">No events scheduled for today</p>
              <%= link_to "Schedule something", new_calendar_event_path, class: "text-xs text-indigo-600 hover:text-indigo-500" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Pending Todos -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Pending Todos</h3>
            <%= link_to "View All", todos_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
          </div>
          <% if @pending_todos.any? %>
            <div class="space-y-3">
              <% @pending_todos.each do |todo| %>
                <div class="flex items-start space-x-3">
                  <input type="checkbox" class="mt-1 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" onchange="toggleTodo(<%= todo.id %>)">
                  <div class="flex-1">
                    <p class="text-sm text-gray-900"><%= todo.title %></p>
                    <div class="flex items-center space-x-2">
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= todo.priority_color %> bg-opacity-10">
                        <%= (todo.priority || 'none').upcase %>
                      </span>
                      <% if todo.due_date.present? %>
                        <span class="text-xs text-gray-500">
                          Due <%= todo.due_date.strftime("%m/%d") %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-check-circle text-2xl text-gray-300 mb-2"></i>
              <p class="text-sm text-gray-500">All caught up! ðŸŽ‰</p>
              <%= link_to "Add a todo", new_todo_path, class: "text-xs text-indigo-600 hover:text-indigo-500" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
          <div class="space-y-3">
            <%= link_to new_calendar_event_path, class: "flex items-center p-3 text-sm font-medium text-gray-900 rounded-lg hover:bg-gray-50 group" do %>
              <i class="fas fa-calendar-plus text-indigo-600 mr-3"></i>
              Schedule Study Session
            <% end %>
            <%= link_to new_todo_path, class: "flex items-center p-3 text-sm font-medium text-gray-900 rounded-lg hover:bg-gray-50 group" do %>
              <i class="fas fa-plus-circle text-green-600 mr-3"></i>
              Add Todo
            <% end %>
            <%= link_to progress_path, class: "flex items-center p-3 text-sm font-medium text-gray-900 rounded-lg hover:bg-gray-50 group" do %>
              <i class="fas fa-chart-line text-purple-600 mr-3"></i>
              View Progress Report
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function toggleTodo(todoId) {
    fetch(`/todos/${todoId}/toggle_complete`, {
      method: 'PATCH',
      headers: {
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content,
        'Content-Type': 'application/json'
      }
    }).then(response => {
      if (response.ok) {
        location.reload();
      }
    });
  }
</script>
