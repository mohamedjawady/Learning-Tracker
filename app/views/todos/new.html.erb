<div class="px-4 py-6 sm:px-0">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Add New Todo</h1>
    <%= link_to "← Back to Todos", todos_path, class: "text-indigo-600 hover:text-indigo-500" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with model: @todo, local: true, class: "space-y-6" do |form| %>
      <% if @todo.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-exclamation-circle text-red-400"></i>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @todo.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="md:col-span-2">
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Enter todo title" %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 4, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Detailed description (optional)..." %>
        </div>

        <div>
          <%= form.label :priority, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :priority, options_for_select([
            ['Low', 'low'],
            ['Medium', 'medium'], 
            ['High', 'high']
          ], @todo.priority), {}, { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
        </div>

        <div>
          <%= form.label :due_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.date_field :due_date, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", todos_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md text-sm font-medium" %>
        <%= form.submit "Create Todo", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>
