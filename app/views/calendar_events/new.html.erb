<div class="px-4 py-6 sm:px-0">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Add New Event</h1>
    <%= link_to "â† Back to Calendar", calendar_events_path, class: "text-indigo-600 hover:text-indigo-500" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with model: @calendar_event, local: true, class: "space-y-6" do |form| %>
      <% if @calendar_event.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-exclamation-circle text-red-400"></i>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @calendar_event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="md:col-span-2">
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Enter event title" %>
        </div>

        <div class="md:col-span-2">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 3, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Event description (optional)..." %>
        </div>

        <div>
          <%= form.label :event_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :event_type, options_for_select([
            ['Study Session', 'study_session'],
            ['Deadline', 'deadline'],
            ['Reminder', 'reminder'],
            ['Todo', 'todo']
          ], @calendar_event.event_type), {}, { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
        </div>

        <div>
          <%= form.label :start_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.datetime_local_field :start_date, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= form.label :end_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.datetime_local_field :end_date, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="flex items-center">
          <%= form.check_box :all_day, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          <%= form.label :all_day, "All Day Event", class: "ml-2 text-sm text-gray-700" %>
        </div>

        <!-- Link to Learning Resource -->
        <div class="md:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Link to Learning Resource (Optional)</label>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= form.select :eventable_type, options_for_select([
                ['None', ''],
                ['Course', 'Course'],
                ['Book', 'Book'],
                ['Article', 'Article']
              ], @calendar_event.eventable_type), {}, { 
                class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
                id: "eventable_type_select"
              } %>
            </div>
            <div>
              <%= form.select :eventable_id, options_for_select([['Select Resource', '']], @calendar_event.eventable_id), {}, { 
                class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
                id: "eventable_id_select"
              } %>
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", calendar_events_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md text-sm font-medium" %>
        <%= form.submit "Create Event", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const eventableTypeSelect = document.getElementById('eventable_type_select');
  const eventableIdSelect = document.getElementById('eventable_id_select');
  
  const resourceOptions = {
    Course: <%= raw @courses.map { |c| [c.title, c.id] }.to_json %>,
    Book: <%= raw @books.map { |b| [b.title, b.id] }.to_json %>,
    Article: <%= raw @articles.map { |a| [a.title, a.id] }.to_json %>
  };
  
  eventableTypeSelect.addEventListener('change', function() {
    const selectedType = this.value;
    eventableIdSelect.innerHTML = '<option value="">Select Resource</option>';
    
    if (selectedType && resourceOptions[selectedType]) {
      resourceOptions[selectedType].forEach(function(option) {
        const optionElement = document.createElement('option');
        optionElement.value = option[1];
        optionElement.textContent = option[0];
        eventableIdSelect.appendChild(optionElement);
      });
    }
  });
});
</script>
