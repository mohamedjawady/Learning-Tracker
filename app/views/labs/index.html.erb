<div class="max-w-6xl mx-auto py-8 px-4">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">🧪 Labs</h1>
      <p class="text-gray-600"><%= @course.title %></p>
    </div>
    <%= link_to "Add New Lab", new_course_lab_path(@course), 
        class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-medium inline-flex items-center gap-2 transition-colors" %>
  </div>

  <% if @labs.any? %>
    <div class="grid gap-4">
      <% @labs.each do |lab| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4 flex-1">
              <div class="flex-shrink-0">
                <% if lab.completed? %>
                  <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                <% else %>
                  <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                    </svg>
                  </div>
                <% end %>
              </div>

              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-1">
                  <%= link_to lab.title, lab_path(lab), class: "hover:text-purple-600 transition-colors" %>
                </h3>
                <% if lab.description.present? %>
                  <p class="text-gray-600 text-sm mb-2"><%= truncate(lab.description, length: 150) %></p>
                <% end %>
                
                <div class="flex items-center gap-4 text-sm text-gray-500">
                  <span>Lab <%= lab.order_number %></span>
                  <% if lab.completed? %>
                    <span class="text-green-600 font-medium">Completed <%= time_ago_in_words(lab.completed_at) %> ago</span>
                  <% else %>
                    <span class="text-orange-600 font-medium">Pending</span>
                  <% end %>
                </div>

                <% if lab.notes.present? && lab.completed? %>
                  <div class="mt-2 p-2 bg-gray-50 rounded text-sm text-gray-700">
                    <strong>Notes:</strong> <%= truncate(lab.notes, length: 100) %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <% unless lab.completed? %>
                <%= link_to complete_lab_path(lab), method: :patch,
                    class: "bg-green-100 hover:bg-green-200 text-green-700 px-3 py-1 rounded-md text-sm font-medium transition-colors",
                    data: { confirm: "Mark this lab as complete?" } do %>
                  ✓ Complete
                <% end %>
              <% end %>
              
              <%= link_to edit_lab_path(lab), 
                  class: "text-gray-600 hover:text-purple-600 p-2 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              
              <%= link_to lab_path(lab), method: :delete,
                  class: "text-gray-600 hover:text-red-600 p-2 transition-colors",
                  data: { confirm: "Are you sure you want to delete this lab?" } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Summary stats -->
    <div class="mt-8 bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Lab Progress Summary</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= @labs.count %></div>
          <div class="text-sm text-gray-600">Total Labs</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-green-600"><%= @labs.where(completed: true).count %></div>
          <div class="text-sm text-gray-600">Completed</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-orange-600"><%= @labs.where(completed: false).count %></div>
          <div class="text-sm text-gray-600">Pending</div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">🧪</div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No labs yet</h3>
      <p class="text-gray-600 mb-6">Start adding hands-on labs to practice what you learn.</p>
      <%= link_to "Add First Lab", new_course_lab_path(@course), 
          class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg font-medium inline-flex items-center gap-2 transition-colors" %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= link_to "← Back to #{@course.title}", course_path(@course), 
        class: "text-purple-600 hover:text-purple-700 font-medium" %>
  </div>
</div>
