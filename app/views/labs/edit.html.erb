<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">✏️ Edit Lab</h1>
      <p class="text-gray-600">Update lab details</p>
    </div>

    <%= form_with model: @lab, local: true, class: "space-y-6" do |form| %>
      <% if @lab.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-red-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          </div>
          <ul class="text-sm text-red-700 list-disc list-inside">
            <% @lab.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :title, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
            placeholder: "Enter lab title..." %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
            placeholder: "Lab description, objectives, or instructions..." %>
      </div>

      <div>
        <%= form.label :order_number, "Lab Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :order_number, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
            placeholder: "1" %>
      </div>

      <div>
        <%= form.label :notes, "Lab Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :notes, rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent",
            placeholder: "Add notes about your experience, learnings, or completion details..." %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :completed, class: "w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 focus:ring-2" %>
        <%= form.label :completed, "Mark as completed", class: "ml-2 text-sm font-medium text-gray-700" %>
      </div>

      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <%= link_to "Cancel", lab_path(@lab), 
            class: "text-gray-600 hover:text-gray-700 font-medium" %>
        
        <div class="flex items-center gap-3">
          <%= link_to "Delete Lab", lab_path(@lab), method: :delete,
              class: "text-red-600 hover:text-red-700 font-medium",
              data: { confirm: "Are you sure you want to delete this lab?" } %>
          <%= form.submit "Update Lab", 
              class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-2 rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
