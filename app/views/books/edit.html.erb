<div class="px-4 py-6 sm:px-0">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Edit Book
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        Update your book information.
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <%= link_to book_path(@book), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 mr-3" do %>
        <i class="fas fa-arrow-left mr-2"></i>
        Back to Book
      <% end %>
      <%= link_to books_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        <i class="fas fa-list mr-2"></i>
        All Books
      <% end %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with model: @book, local: true, multipart: true, class: "space-y-6" do |form| %>
        <% if @book.errors.any? %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative">
            <h4 class="font-medium">Please fix the following errors:</h4>
            <ul class="mt-1 list-disc list-inside">
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Book title" %>
          </div>

          <div>
            <%= form.label :author, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :author, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Author name" %>
          </div>

          <div>
            <%= form.label :isbn, class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :isbn, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "ISBN" %>
          </div>

          <div>
            <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :status, options_for_select([
              ['Not Started', 'not_started'],
              ['In Progress', 'in_progress'],
              ['Completed', 'completed'],
              ['Paused', 'paused']
            ], @book.status), {}, { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div>
            <%= form.label :total_pages, class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :total_pages, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Total pages" %>
          </div>

          <div>
            <%= form.label :current_page, class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :current_page, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Current page" %>
          </div>

          <div>
            <%= form.label :start_date, class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :start_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <div>
            <%= form.label :target_completion_date, class: "block text-sm font-medium text-gray-700" %>
            <%= form.date_field :target_completion_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Book description..." %>
        </div>

        <div>
          <%= form.label :pdf_file, "Upload PDF File", class: "block text-sm font-medium text-gray-700" %>
          <%= form.file_field :pdf_file, accept: ".pdf", class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
          <p class="mt-1 text-sm text-gray-500">Upload a PDF version of the book for integrated reading experience.</p>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to book_path(@book), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Book", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
