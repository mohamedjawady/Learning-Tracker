<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Note Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8" style="border-left: 4px solid <%= @note.color %>;">
    <div class="px-6 py-8">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <div class="flex items-center mb-4">
            <% if @note.is_folder? %>
              <i class="fas fa-folder text-yellow-500 text-2xl mr-3"></i>
            <% else %>
              <i class="fas fa-sticky-note text-blue-500 text-2xl mr-3"></i>
            <% end %>
            <h1 class="text-3xl font-bold text-gray-900"><%= @note.title %></h1>
          </div>
          
          <!-- Metadata -->
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
            <span>
              <i class="fas fa-clock mr-1"></i>
              Created <%= time_ago_in_words(@note.created_at) %> ago
            </span>
            <% if @note.updated_at != @note.created_at %>
              <span>
                <i class="fas fa-edit mr-1"></i>
                Updated <%= time_ago_in_words(@note.updated_at) %> ago
              </span>
            <% end %>
            <% if @note.parent %>
              <span>
                <i class="fas fa-folder mr-1"></i>
                In: <%= link_to @note.parent.title, @note.parent, class: "text-indigo-600 hover:text-indigo-500" %>
              </span>
            <% end %>
            <% if @note.notable %>
              <span>
                <i class="fas fa-link mr-1"></i>
                Linked to: <%= link_to @note.notable.title, @note.notable, class: "text-indigo-600 hover:text-indigo-500" %>
              </span>
            <% end %>
          </div>

          <!-- Tags -->
          <% if @note.tag_list.any? %>
            <div class="flex flex-wrap gap-2 mt-4">
              <% @note.tag_list.each do |tag| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                  <i class="fas fa-tag mr-1 text-xs"></i>
                  <%= tag %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <!-- Actions -->
        <div class="flex space-x-3 ml-6">
          <%= link_to edit_note_path(@note), 
              class: "inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <i class="fas fa-edit mr-2"></i>
            Edit
          <% end %>
          
          <%= link_to @note, method: :delete, 
              data: { confirm: "Are you sure you want to delete '#{@note.title}'?" }, 
              class: "inline-flex items-center px-3 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" do %>
            <i class="fas fa-trash mr-2"></i>
            Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Note Content -->
  <% unless @note.is_folder? %>
    <% if @note.content.present? %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Content</h2>
        </div>
        <div class="p-6">
          <div class="prose max-w-none">
            <%= raw @note.content %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-gray-50 rounded-lg border-2 border-dashed border-gray-300 mb-8">
        <div class="text-center py-12">
          <i class="fas fa-file-alt text-4xl text-gray-400 mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No content yet</h3>
          <p class="text-gray-500 mb-6">Add some content to this note to get started.</p>
          <%= link_to "Add Content", edit_note_path(@note), 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      </div>
    <% end %>
  <% end %>

  <!-- Children (for folders) -->
  <% if @note.is_folder? && @children.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-medium text-gray-900">
            <i class="fas fa-layer-group mr-2"></i>
            Contents (<%= @children.count %>)
          </h2>
          <%= link_to "Add Note", new_note_path(parent_id: @note.id), 
              class: "text-sm text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
      <div class="p-6">
        <div class="space-y-3">
          <% @children.each do |child| %>
            <div class="flex items-center justify-between p-3 rounded-lg border border-gray-200 hover:bg-gray-50">
              <div class="flex items-center">
                <% if child.is_folder? %>
                  <i class="fas fa-folder text-yellow-500 mr-3"></i>
                <% else %>
                  <i class="fas fa-sticky-note text-blue-500 mr-3"></i>
                <% end %>
                <div>
                  <%= link_to child.title, child, class: "font-medium text-gray-900 hover:text-indigo-600" %>
                  <% if child.tag_list.any? %>
                    <div class="flex gap-1 mt-1">
                      <% child.tag_list.first(3).each do |tag| %>
                        <span class="inline-block px-2 py-0.5 text-xs bg-gray-100 text-gray-600 rounded">
                          <%= tag %>
                        </span>
                      <% end %>
                      <% if child.tag_list.length > 3 %>
                        <span class="inline-block px-2 py-0.5 text-xs bg-gray-100 text-gray-600 rounded">
                          +<%= child.tag_list.length - 3 %>
                        </span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <span class="text-xs text-gray-500">
                  <%= time_ago_in_words(child.updated_at) %> ago
                </span>
                <%= link_to edit_note_path(child), class: "text-gray-400 hover:text-gray-600" do %>
                  <i class="fas fa-edit text-sm"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% elsif @note.is_folder? %>
    <div class="bg-gray-50 rounded-lg border-2 border-dashed border-gray-300 mb-8">
      <div class="text-center py-12">
        <i class="fas fa-folder-open text-4xl text-gray-400 mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Empty folder</h3>
        <p class="text-gray-500 mb-6">Add some notes or subfolders to organize your content.</p>
        <div class="flex justify-center space-x-3">
          <%= link_to "Add Note", new_note_path(parent_id: @note.id), 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          <%= link_to "Add Subfolder", new_note_path(parent_id: @note.id, is_folder: true), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Navigation -->
  <div class="flex justify-between">
    <%= link_to "← Back to Notes", notes_path, 
        class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    
    <% if @note.notable %>
      <%= link_to "View #{@note.notable.class.name}", @note.notable, 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <% end %>
  </div>
</div>
