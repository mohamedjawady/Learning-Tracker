<div class="max-w-6xl mx-auto py-8 px-4">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">📖 Chapters</h1>
      <p class="text-gray-600"><%= @course&.title || @book&.title %></p>
    </div>
    <%= link_to "Add New Chapter", new_course_chapter_path(@course) if @course, 
        class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium inline-flex items-center gap-2 transition-colors" %>
    <%= link_to "Add New Chapter", new_book_chapter_path(@book) if @book, 
        class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium inline-flex items-center gap-2 transition-colors" %>
  </div>

  <% if @chapters.any? %>
    <div class="grid gap-4">
      <% @chapters.each do |chapter| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4 flex-1">
              <div class="flex-shrink-0">
                <% if chapter.completed? %>
                  <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                <% else %>
                  <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-600"><%= chapter.order_number %></span>
                  </div>
                <% end %>
              </div>

              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-1">
                  <%= link_to chapter.title, chapter_path(chapter), class: "hover:text-blue-600 transition-colors" %>
                </h3>
                <% if chapter.description.present? %>
                  <p class="text-gray-600 text-sm mb-2"><%= truncate(chapter.description, length: 150) %></p>
                <% end %>
                
                <div class="flex items-center gap-4 text-sm text-gray-500">
                  <span>Chapter <%= chapter.order_number %></span>
                  <% if chapter.page_start.present? && chapter.page_end.present? %>
                    <span>Pages <%= chapter.page_start %>-<%= chapter.page_end %></span>
                  <% end %>
                  <% if chapter.completed? %>
                    <span class="text-green-600 font-medium">Completed <%= time_ago_in_words(chapter.completed_at) %> ago</span>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="flex items-center gap-2">
              <% unless chapter.completed? %>
                <%= link_to complete_chapter_path(chapter), method: :patch,
                    class: "bg-green-100 hover:bg-green-200 text-green-700 px-3 py-1 rounded-md text-sm font-medium transition-colors",
                    data: { confirm: "Mark this chapter as complete?" } do %>
                  ✓ Complete
                <% end %>
              <% end %>
              
              <%= link_to edit_chapter_path(chapter), 
                  class: "text-gray-600 hover:text-blue-600 p-2 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              
              <%= link_to chapter_path(chapter), method: :delete,
                  class: "text-gray-600 hover:text-red-600 p-2 transition-colors",
                  data: { confirm: "Are you sure you want to delete this chapter?" } do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">📖</div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No chapters yet</h3>
      <p class="text-gray-600 mb-6">Start organizing your learning by adding chapters.</p>
              <%= link_to "Add First Chapter", new_course_chapter_path(@course) if @course, 
                  class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium inline-flex items-center gap-2 transition-colors" %>
              <%= link_to "Add First Chapter", new_book_chapter_path(@book) if @book, 
                  class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium inline-flex items-center gap-2 transition-colors" %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= link_to "← Back to #{@course&.title || @book&.title}", 
        @course ? course_path(@course) : book_path(@book), 
        class: "text-blue-600 hover:text-blue-700 font-medium" %>
  </div>
</div>
